<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0.0.2"  xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TakeOn</name>
    <description>
        Sistema de control de productos para tienda
    </description>
    <author email="didier.merchan@gmail.com" href="https://github.com/DidierMerchan">
       Didier Merchan Carvajal
    </author>
    <icon src="icon.png" />
    <icon src="res/icon/android/icon.png"   gap:platform="android"    gap:qualifier="ldpi" />
    <icon src="res/icon/android/icon.png"   gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="res/icon/android/icon.png"   gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="res/icon/android/icon.png"   gap:platform="android"    gap:qualifier="xhdpi" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
