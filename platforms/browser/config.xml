<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TakeOn</name>
    <description>
        Sistema de control de productos para tienda
    </description>
    <author email="didier.merchan@gmail.com" href="https://github.com/DidierMerchan">
       Didier Merchan Carvajal
    </author>
    <content src="index.html" />
    <icon src="icon.png" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="res/icon/android/icon.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="res/icon/android/icon.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="res/icon/android/icon.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="res/icon/android/icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="fullscreen" value="true" />
</widget>
